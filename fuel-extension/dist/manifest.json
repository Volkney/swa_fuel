{
  "manifest_version": 3,
  "name": "Fuel Ticket Extension",
  "version": "1.0.0",
  "description": "A fuel ticket calculator extension",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
   "https://*/*",
   "http://*/*"
  ],
  "icons": {
    "32": "icon32.png"
  }
}